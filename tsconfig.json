{
    "compilerOptions": {
        // Type Checking
        "strict": true,

        // Modules
        "module": "CommonJS",
        "moduleResolution": "Node",

        // Emit
        "downlevelIteration": true,
        "outDir": "./dest/",
        "sourceMap": true,

        // JavaScript Support
        "allowJs": true,

        // Language and Enviroment
        "target": "ES6",

        // Copleteness
        "skipLibCheck": true,
    }
}